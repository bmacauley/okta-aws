{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [ 2, 2, { "SwitchCase": 1 } ],
        "linebreak-style": [ 2, "unix" ],
        "no-var": 2,
        "object-curly-spacing": [2, "always"],
        "quotes": [ 2, "single" ],
        "semi": [ 2, "always" ],
        "no-console": 1
    },
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true
    }
}